{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.0",
  "default_locale": "en",
  "icons": {
    "16": "./icons/mastoandon-16.png",
    "32": "./icons/mastoandon-32.png",
    "48": "./icons/mastoandon-48.png",
    "128": "./icons/mastoandon-128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": ["view/messages.js"],

  "page_action": {
    "default_icon": "icons/mastoandon-32.png",
    "default_title": "Masto and DON",
    "browser_style": true
  },

  "permissions": [
    "storage",
    "webRequest",
    "<all_urls>",
    "activeTab",
    "tabs"
  ]

}